<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.AssignedEmployeeID, htmlAttributes: new { @class = "control-label col-md-2" })
