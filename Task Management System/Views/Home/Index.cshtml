@model DBOperations.Models.Employees_Model

@{
    ViewBag.Title = "TaskHub";
}

<div class="jumbotron">
    <h2>TaskHub</h2>
    <p class="lead">Welcome to TaskHub @Model.FirstName</p>
</div>

<div class="row">
    <div class="col-md-4">
        <img src="~/Content/Profile.png" height="120px" width="120px" />
        <p></p>
        @Html.ActionLink("My Profile", "Details", "Employee", new { id = Model.EmployeeID }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <div class="col-md-4">
        <img src="~/Content/Dashboard.png" height="120px" width="120px" />
        <p></p>
        @if (Model.EmployeeID != 1)
        {
            @Html.ActionLink("Dashboard", "GetMyUserStories", "UserStories", new { Emp_id = Model.EmployeeID }, new { @class = "btn btn-primary btn-lg" })
        }
        else
        {
            @Html.ActionLink("Dashboard", "GetAllUserStories", "UserStories", null,  new { @class = "btn btn-primary btn-lg" })
        }
    </div>
    <div class="col-md-4">
        <img src="~/Content/Team.png" height="120px" width="120px" />
        <p></p>
        @if (Model.EmployeeID != 1)
        {
            @Html.ActionLink("My Team", "GetMyTeam", "Employee", new { id = Model.ManagerID }, new { @class = "btn btn-primary btn-lg" })
        }
        else
        {
            @Html.ActionLink("Manage Employees", "GetEmployees", "Employee", null, new { @class = "btn btn-primary btn-lg" })
        }
    </div>
    <div class="col-md-4">
        <img src="~/Content/Team.png" height="120px" width="120px" />
        <p></p>
        @Html.ActionLink("My Employees", "GetMyEmployees", "Employee", new { id = Model.EmployeeID }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <div class="col-md-4">
        <img src="~/Content/Logout.png" height="120px" width="120px" />
        <p></p>
        @Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>
