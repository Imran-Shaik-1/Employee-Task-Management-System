@model IEnumerable<DBOperations.Models.Employees_Model>

@{
    ViewBag.Title = "GetMyEmployees";
}

@if (ViewBag.Flag == false)
{
    <p>Oops! Looks like you are not a manager of any employee please contact admin.</p>
}
else
{


    <div class="container mt-5">
        <h2>These are your employees.</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Is Manager</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.EmployeeID)</th>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                            <td>
                                @if (item.IsManager)
                                {
                                    <span class="text-success">&#10003;</span>
                                }
                                else
                                {
                                    <span>&#10007;</span>
                                }
                            </td>
                            @if (item.EmployeeID == 1 || ViewBag.flag == true)

                            {
                        <td>
                            @Html.ActionLink("Manage User Stories", "GetEmpUserStories", "UserStories", new { Emp_id = item.EmployeeID }, new { @class = "btn btn-primary btn-sm" })

                        </td>
                            }
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div>
            @Html.ActionLink("Back to Index", "Index", "Home")
        </div>

    </div>
}