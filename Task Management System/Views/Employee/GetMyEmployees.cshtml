@model IEnumerable<DBOperations.Models.Employees_Model>

@{
    ViewBag.Title = "GetMyEmployees";
}

<style>
    .pad {
        padding-right: 50px;
    }
</style>

@if (ViewBag.Flag == false)
{
    {
        Layout = null;
    }


    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #343a40;
            margin: 0;
        }

        .error-container {
            text-align: center;
            padding: 20px;
            background-color: #495057;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2 {
            color: #ffffff;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn-contact-admin {
            padding: 10px 20px;
        }

        p {
            color: #ffffff;
            font-size: 16px;
            margin-top: 20px;
        }
    </style>

    <div class="error-container">
        <b><h1>Oops! </h1></b>
        <b><h2>Looks like you are not a Manager of any Employee. Please contact Admin.</h2></b>
        <a href="mailto:taskhubapplication@gmail.com" class="btn btn-primary btn-contact-admin" style="background-color: #007bff; color: #ffffff; text-decoration: none;">Contact Admin</a>
    </div>


}
else
{


    <div class="container pad mt-5">
        <h2>These are your employees.</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Is Manager</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.EmployeeID)</th>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                            <td>
                                @if (item.IsManager)
                                {
                                    <span class="text-success">&#10003;</span>
                                }
                                else
                                {
                                    <span>&#10007;</span>
                                }
                            </td>
                            @if (item.EmployeeID == 1 || ViewBag.flag == true)

                            {
                                <td>
                                    @Html.ActionLink("Manage User Stories", "GetEmpUserStories", "UserStories", new { Emp_id = item.EmployeeID }, new { @class = "btn btn-primary btn-sm" })

                                </td>
                            }
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <div>
            @Html.ActionLink("Back to Index", "Index", "Home")
        </div>

    </div>
}
