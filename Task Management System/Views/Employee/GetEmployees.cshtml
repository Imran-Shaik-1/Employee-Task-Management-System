@model IEnumerable<DBOperations.Models.Employees_Model>

@{
    ViewBag.Title = "GetEmployees";
}

<style>
    .pad {
        padding-right: 50px;
    }
</style>

<div class="container pad mt-5">
    <h2>Manage Employees</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Is Manager</th>
                    <th scope="col">Manager ID</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.EmployeeID)</th>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                        <td>
                            @if (item.IsManager)
                            {
                                <span class="text-success">&#10003;</span>
                            }
                            else
                            {
                                <span>&#10007;</span>
                            }
                        </td>
                        @if (item.ManagerID != null)
                        {
                            <td>@Html.DisplayFor(modelItem => item.ManagerID)</td>
                        }
                        else
                        {
                            <td>N/A</td>
                        }
                        @if (item.EmployeeID != 1)
                        {
                            <td>
                                @Html.ActionLink("Assign Manager", "AssignManager", new { id = item.EmployeeID }, new { @class = "btn btn-primary btn-sm" })
                            </td>
                            <td>
                                @Html.ActionLink("Terminate Employee", "TerminateEmployee", new { id = item.EmployeeID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div>
        @Html.ActionLink("Back to Index", "Index", "Home")
    </div>
</div>