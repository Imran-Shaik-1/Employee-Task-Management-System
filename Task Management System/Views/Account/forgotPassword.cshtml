@model DBOperations.Models.Employees_Model

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<style>
    body {
        background-color: brown;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        display: flex;
        align-items: center;
    }

    .login-card {
        background-color: wheat;
        padding: 22px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        width: 80%;
        max-width: 276px;
        margin-left: 30px;
    }

        .login-card h2 {
            text-align: center;
        }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-control {
        background-color: #ffffff;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 15px;
        padding: 11px;
        margin: 0 auto;
        width: 100%;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .text-danger {
        color: #dc3545;
    }

    .btm {
        margin-top: 20px;
        width: 100%;
    }

    .imgi {
        width: 60%;
        margin-right: 120px;
        margin-left: -150px;
    }

        .imgi img {
            width: 150%;
            height: auto;
        }


    .password {
        display: inline-block;
        position: relative;
    }

        .password input {
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 15px;
            padding: 11px;
            margin: 0 auto;
            width: 100%;
            color: #333;
            padding-right: 77px;
            background-color: #ffffff;
        }

    .pass-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 24px;
        cursor: pointer;
    }
</style>


<div class="login-container">

    <div class="imgi">
        <img src="~/Content/logo_taskhub-removebg-preview.png" />
    </div>

    <div class="login-card">
        <h2 class="text-center mb-4">Forgot Password</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @if (!(string.IsNullOrEmpty(ViewBag.flag)))
            {
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @readonly = "readonly", placeholder = "Email Address" })
            }else
            {
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Email Address" })
            }
            @if (string.IsNullOrEmpty(ViewBag.flag))
            {
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
            }
        </div>

        @if (string.IsNullOrEmpty(ViewBag.flag))
        {
            <div class="form-group text-center">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg btm text-center" />
            </div>
        }

    </div>
        }

        @if (!(string.IsNullOrEmpty(ViewBag.flag)))
        {
            using (Html.BeginForm("VerifyOTP", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.EditorFor(model => model.OTP, new { htmlAttributes = new { @class = "form-control", placeholder = "OTP" } })
                    @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                        <input type="submit" value="Verify OTP" class="btn btn-primary btn-lg btm text-center" />
                </div>

            }
        }

        @if (!(string.IsNullOrEmpty(ViewBag.Message)))
        {
            <h4>@ViewBag.Message</h4>
            @Html.ActionLink("Create a new account", "Signup")
        }else{
        <div>
            @Html.ActionLink("Login", "Login")
        </div>
        }

    </div>
</div>
